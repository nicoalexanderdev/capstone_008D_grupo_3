{
  "expo": {
    "name": "MetroSence",
    "slug": "frontend_metrosence",
    "scheme": "MetroSence",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Necesitamos tu micr칩fono para reconocer tu voz."
      },
      "icon": {
        "dark": "./assets/images/ios-dark.png",
        "light": "./assets/images/ios-light.png",
        "tinted": "./assets/images/ios-tinted.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "monochromeImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.frontend_metrosence"
    },
    "web": {
      "favicon": "./assets/logo_metrosence.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-speech-recognition", 
        {
          "microphonePermission": "MetroSence necesita usar el micr칩fono.",
          "speechRecognitionPermission": "MetroSence quiere usar reconocimiento de voz.",
          "androidSpeechServicePackages": ["com.google.android.googlequicksearchbox"]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "MetroSence necesita usar tu c치mara.",
          "microphonePermission": "MetroSence necesita usar el micr칩fono.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon-dark.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "dark": {
            "image": "./assets/images/splash-icon-light.png",
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "extra": {
      "EXPO_PUBLIC_AGENT_BASE": "http://127.0.0.1:8787",
      "router": {},
      "eas": {
        "projectId": "b9683677-541b-4565-8cdb-0992c4156048"
      }
    },
    "owner": "nicolasoses"
  }
}
